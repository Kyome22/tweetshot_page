{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "strict": true,
    "module": "ESNext",
    "jsx": "react",
    "lib": ["dom", "es2020"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "typeRoots": ["types", "node_modules/@types"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"]
}
